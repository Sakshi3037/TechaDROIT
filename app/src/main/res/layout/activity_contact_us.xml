<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.techadroit.ContactUs"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:layout_width="50dp"
        android:src="@drawable/phone1"
        android:layout_height="50dp"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talk to Us"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColorLink="#000000"
        android:textColor="#403c85"
        android:id="@+id/textView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9569729126"
        android:layout_marginLeft="25dp"
        android:id="@+id/textView2"
        android:autoLink="phone"
        android:textColorLink="#000000"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:autoLink="phone"
        android:textColorLink="#000000"
        android:text="+91 8699081249"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
<ImageView
    android:layout_width="50dp"
    android:src="@drawable/gmail"
    android:layout_height="50dp"
    android:id="@+id/imageView2"
    android:layout_below="@+id/textView4"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write to Us"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textColor="#403c85"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:text="techadroit.pec@gmail.com"
        android:textSize="18dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ieee@pec.edu.in"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textSize="18dp"
        android:textColor="#000000" />
    <ImageView
        android:src="@drawable/facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For more updates"
        android:id="@+id/textView3"
        android:textColor="#403c85"
        android:textSize="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="facebook.com/pectechnicalevents"
        android:id="@+id/textView8"
        android:autoLink="web"
        android:textColorLink="#000000"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

</RelativeLayout>
